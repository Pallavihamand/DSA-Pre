class Node:
    def __init__(self, data, next=None):
        self.data = data
        self.next = next

def array_to_linked_list(arr):
    if not arr:
        return None
    head = Node(arr[0])
    temp = head
    for i in range(1, len(arr)):
        temp.next = Node(arr[i])
        temp = temp.next
    return head

def traverse(head):
    temp = head
    while temp:
        print(temp.data, end=" -> ")
        temp = temp.next
    print("None")

def delete_by_value(head, key):
    if head is None:
        return None

    if head.data == key:
        return head.next

    temp = head
    while temp.next:
        if temp.next.data == key:
            temp.next = temp.next.next
            return head
        temp = temp.next

    print("Element not found")
    return head


arr = [2, 5, 8, 7]
head = array_to_linked_list(arr)

print("Before Deletion:")
traverse(head)

head = delete_by_value(head, 8)

print("After Deletion:")
traverse(head)
