class Solution:
    def splitArray(self, nums: List[int], k: int) -> int:
        def cansplit(nums,k,mid):
            count=1
            total=0
            for num in nums:
                total+=num
                if total >mid:
                    count+=1
                    total=num
                    if count > k:
                        return False
            return True 
        
        left,right=max(nums),sum(nums)
        ans = right

        while left <= right:
            mid=(left+right)//2
            if cansplit(nums,k,mid):
                ans=mid
                right=mid-1
            else:
                left=mid+1
        return ans
